<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateEvents">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="373dp"
        android:layout_height="54dp"
        android:layout_marginTop="44dp"
        android:text="Please fill out the information about your event !"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.737"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/titleField"
        android:layout_width="112dp"
        android:layout_height="47dp"
        android:layout_marginBottom="32dp"
        android:hint="Title"
        app:layout_constraintBottom_toTopOf="@+id/descriptionField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/descriptionField"
        android:layout_width="104dp"
        android:layout_height="50dp"
        android:layout_marginBottom="28dp"
        android:hint="Description"
        app:layout_constraintBottom_toTopOf="@+id/dateField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.415"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/dateField"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="28dp"
        android:hint="Date"
        app:layout_constraintBottom_toTopOf="@+id/startTimeField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.439"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/startTimeField"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:hint="Start Time"
        app:layout_constraintBottom_toTopOf="@+id/endTimeField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/endTimeField"
        android:layout_width="128dp"
        android:layout_height="44dp"
        android:layout_marginBottom="20dp"
        android:hint="End Time"
        app:layout_constraintBottom_toTopOf="@+id/eventAddressField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/eventAddressField"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="80dp"
        android:hint="Event Address"
        app:layout_constraintBottom_toTopOf="@+id/submitEventButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/submitEventButton"
        android:layout_width="117dp"
        android:layout_height="40dp"
        android:layout_marginBottom="92dp"
        android:backgroundTint="@color/coloruOttawa"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>