<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInPage">


    <Button
        android:id="@+id/signInOrganizerButton"
        android:layout_width="224dp"
        android:layout_height="55dp"
        android:layout_marginBottom="308dp"
        android:layout_weight="1"
        android:backgroundTint="@color/coloruOttawa"
        android:text="Sign up as an Organizer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/signInAttendeeButton"
        android:layout_width="229dp"
        android:layout_height="56dp"
        android:layout_marginTop="294dp"
        android:layout_marginBottom="390dp"
        android:layout_weight="1"
        android:backgroundTint="@color/coloruOttawa"
        android:text="Sign up as an Attendee"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>